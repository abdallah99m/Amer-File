
<form method="post" enctype="multipart/form-data">
     
    <div class="border p-3 mt-4">
        <div class ="row pb-2">
            <h2 class="text-primary">Create Request</h2>
            <hr/>
        </div>
        <div asp-validation-summary="All"></div>
     
      
          <div class="mb-3">
            <label >Upload file</label>
            <input type="file"  id="uploadBox" name="file" class="form-control" />
        </div>
         
       
        
        <button type="submit" class="btn btn-primary" onclick="return ValidateInput()" style="width:150px">Create</button>
        <a asp-controller="Request" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
    </div>
    
</form>
@section Scripts{
@{
<partial name="_ValidationScriptsPartial" />
}
<script>
function ValidateInput()
{
    if(document.getElementById("uploadBox").value=="")
    {  Swal.fire({
        icon: 'error',
        title: 'Oops...',
        text: 'please upload an image',
            });
            return false;
    }
    return true;
}
</script>
}
